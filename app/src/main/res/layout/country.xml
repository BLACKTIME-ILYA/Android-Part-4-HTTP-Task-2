<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="New Text"
        android:id="@+id/country_name"
        android:padding="10dp"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="20dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_toEndOf="@id/country_name">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/translation_de_text"
                android:id="@+id/translation_de" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="New Text"
                android:id="@+id/translation_de_value"
                android:layout_marginLeft="10dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/translation_es_text"
                android:id="@+id/translation_es" />

            <TextView
                tools:text="New Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/translation_es_value"
                android:layout_marginLeft="10dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/translation_fr_text"
                android:id="@+id/translation_fr" />

            <TextView
                tools:text="New Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/translation_fr_value"
                android:layout_marginLeft="10dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/translation_ja_text"
                android:id="@+id/translation_ja" />

            <TextView
                tools:text="New Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/translation_ja_value"
                android:layout_marginLeft="10dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/translation_it_text"
                android:id="@+id/translation_it" />

            <TextView
                tools:text="New Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/translation_it_value"
                android:layout_marginLeft="10dp" />
        </TableRow>
    </TableLayout>

</RelativeLayout>